            <apex:pageBlock title="My Content" mode="edit">
                <apex:pageBlockSection >
                    <apex:inputField value="{!student.Name}"/>    
                    <apex:inputField value="{!student.College__c}"/>
                </apex:pageBlockSection>
                <apex:commandButton action="{!Save}" value="Save"/>
            </apex:pageBlock>
        </apex:form> -->
        <div class="py-5">
            <table>
                <thead>
                    <tr>
                        <th>Salutation</th>
                        <th>Name</th>
                        <th>Gender</th>
                        <th>Contact Number</th>
                        <th>Date of Birth</th>
                        <th>Blood Group</th>
                        <th>Student Active Status</th>
                        <th>Total Mark</th>
                        <th>Department Name</th>
                        <th>College Name</th>
                    </tr>
                </thead>
                <tbody>
                    <apex:repeat var="student" value="{!studentList}">
                        <tr>
                            <td><apex:outputField value="{!student.Salutation__c}"/></td>
                            <td><apex:outputField value="{!student.Name}"/></td>
                            <td><apex:outputField value="{!student.Gender__c}"/></td>
                            <td><apex:outputField value="{!student.Contact_Number__c}"/></td>
                            <td><apex:outputField value="{!student.D_O_B__c}"/></td>
                            <td><apex:outputField value="{!student.Blood_Group__c}"/></td>
                            <td><apex:outputField value="{!student.Sudent_Active_Status__c}"/></td>
                            <td><apex:outputField value="{!student.TotalMark__c}"/></td>
                            <td><apex:outputField value="{!student.Class__c}"/></td>
                            <td><apex:outputField value="{!student.College__c}"/></td>
                        </tr>
                    </apex:repeat>
                </tbody>
            </table>
        </div>
    </apex:define>
</apex:page>