<apex:page applyHtmlTag="false" showHeader="false" sidebar="false" standardStylesheets="false" docType="html-5.0">
    <html lang="en">
    <head>
        <meta charset="UTF-8"/>
        <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>Working with Tables</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous"/>
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        <style>
            table{
                width: 100%;
                text-align: center;
            }
            table, th, td{
                border: 1px solid black;
                border-top: 1px solid black !important;
                border-bottom: 1px solid black !important;
                border-collapse: collapse;
                padding: 20px 0 !important;
            }
            .new_table{
                box-sizing: border-box;
                padding: 10px;
                width: 100%;
                max-width: 130px;
                margin-bottom: 30px;
                background-color: rgb(90, 158, 158);
                color: white;
                border: 1px solid teal;
                font-weight: bold;
                outline: none;
                transition: 0.5s;
                margin-left: 90%;
            }
            .new_table:hover{
                background-color: white;
                color: black;
                outline: 1px solid teal;
                transition: 0.5s;
            }
            .table_btns{
                margin-left: 79%;
            }
            .table_btns > button{
                box-sizing: border-box;
                padding: 10px;
                width: 100%;
                max-width: 130px;
                margin-bottom: 10px;
                background-color: rgb(90, 158, 158);
                color: white;
                border: 1px solid teal;
                outline: none;
                transition: 0.5s;
                font-weight: bold;
            }
            .table_btns > button:hover{
                background-color: white;
                color: black;
                outline: 1px solid teal;
                transition: 0.5s;
            }
            .table_btns > button:nth-child(1){
                box-sizing: border-box;
                padding: 10px;
                width: 100%;
                max-width: 130px;
                margin-bottom: 10px;
                background-color: rgb(219, 141, 141);
                color: white;
                border: 1px solid red;
                outline: none;
                transition: 0.5s;
                font-weight: bold;
            } 
            .table_btns > button:hover:nth-child(1){
                background-color: white;
                color: black;
                outline: 1px solid teal;
                transition: 0.5s;
            }
        </style>
    </head>
    <body>
        <div class="text-right pr-2 pt-2">
            <button class="new_table">New Table</button>
        </div>
        <div id="tables">
            <div id="table_sec1" class="table">
                <div class="table_btns text-right pr-2">
                    <button id="delete_table1" onclick="deleteTable(1)">Delete Table</button>
                    <button id="add_row1" onclick="addRow(1)">Add Row</button>
                </div>
                <table id="table1">
                    <thead>
                        <th>Test 1</th>
                        <th>Test 2</th>
                        <th>Test 3</th>
                        <th>Test 4</th>
                        <th>Test 5</th>
                        <th>Test 6</th>
                    </thead>
                    <tbody>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <script>
            document.querySelector('.new_table').addEventListener('click', function(){
                let tables = document.querySelector('#tables');
                
                //Generate Id(The Id is Unique and not contains with another id)
                let tableLength = 1;
                let testTable = document.querySelectorAll('#tables .table');
                let idArray = [];
                for(let table of testTable){
                    idArray.push(Number(table.id.match(/\d/g).join("")));
                }
                if(idArray.length != 0){
                    let maxId = Math.max(...idArray);
                    tableLength = maxId+1;
                }
    
                tables.innerHTML += 
                `<div id="table_sec${tableLength}" class="table">
                    <div class="table_btns text-right pr-2">
                        <button id='delete_table${tableLength}' onClick='deleteTable(${tableLength})'>Delete Table</button>
                        <button id='add_row${tableLength}' onClick='addRow(${tableLength})'>Add Row</button>
                    </div>
                    <table id='table${tableLength}'>
                        <thead>
                            <th>Test 1</th>
                            <th>Test 2</th>
                            <th>Test 3</th>
                            <th>Test 4</th>
                            <th>Test 5</th>
                            <th>Test 6</th>
                        </thead>
                        <tbody>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>`;
            });
            
            function deleteTable(id){
                document.querySelector(`#table_sec${id}`).remove();
            }
    
            function addRow(id){
                let table = document.querySelector(`#table${id}`);
                let rowLength = table.rows.length;
                let row = table.insertRow(rowLength).innerHTML =
                `<tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>`;
            }
        </script>
    </body>
    </html>
</apex:page>